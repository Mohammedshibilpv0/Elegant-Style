<section class="intro   shadow-2-strong pt-5 pb-3 mb-3" >
    <div class="mask d-flex align-items-center h-100" >
      <div class="container">
        <% if (locals.succ) { %>
           <h4 style="background-color: rgb(223, 73, 73); text-align: center; color: white;"><%= succ%></h4>

          <% }%>
        <div class="row justify-content-center">
          <div class="col-10">
            <div class="card  shadow-2-strong">
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table  table-borderless mb-0">
                    <thead>
                      <tr>
                        <th scope="col">No</th>
                        <th scope="col">Coupon Name</th>
                        <th scope="col">Coupon Code</th>
                        <th scope="col">Discount Amount</th>
                        <th scope="col">Min Amount</th>
                         <th scope="col">Coupon Description</th>
                         <th scope="col">Expr Date</th>
                         <th>Delete</th>
                      </tr>
                    </thead>
                  
                    <tbody >
                        <% if (coupons){%>

                      
                        <%coupons.forEach((coupon,index)=>{%>

                            <tr id="couponTableBody">
                                <th scope="row"><%=index+1%> </th>
                                <td><%=coupon.couponName%></td>
                                <td><%=coupon.couponCode%></td>
                                <td><%=coupon.discountamount%></td>
                                <td><%=coupon.minAmount%></td>
                                <td><%=coupon.couponDescription%></td>
                                <td><%=coupon.expiryDate.toLocaleDateString('en-US',
                                    {
                                    year:'numeric',
                                    month: 'short'
                                    ,
                                    day: '2-digit'
                                    }).replace(/\//g, '-'
                                    )
                                    %></td>
                               
        
                               
                                  <td >
        
                                    <button class="btn btn-primary mb-2" style="width: 100%;" onclick="deletecoupon('<%=coupon._id%>')">Delete</button>
                                 
        
                                </td>
                            
                              </tr>
        


                        <%})%>
                        <% }else{%>

                            <p>no Coupons  </p>
                            <%}%>

                    </tbody>

                  </table>

                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="container d-flex align-items-center justify-content-end mt-3">
            <a  href="/admin/addcoupon" class="btn btn-success btn-rounded" >
              Add new coupon
            </a>
          </div>

      </div>

    </div>



</section>



