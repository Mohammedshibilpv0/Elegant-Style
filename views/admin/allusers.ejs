                          </thead>
                          <tbody>
                          <tr>
                            <% if (userData.length > 0) { %>
                              <% userData.forEach(data => { %>
                                <tr>
                                  <td>
                                    <p class="user-link mt-4"><%= data.Name %></p>
                                  </td>
                                  <td>
                                    <p class="user-link mt-4"><%= data.Email %></p>
                                  </td>
                                  <td>
                                    <p class="user-link mt-4" id="status_<%= data._id %>" ><%= data.Status %></p>
                                  </td>
                                  <td style="width: 20%">
                                    <% if (data.Status=="blocked") { %>
                                      <button id="button_<%= data._id %>" class="btn btn-primary mb-2" style="width: 100%;" onclick="usermange('<%= data._id %>','unblock')">Unblock</button>
                                      <% } else { %>
                                          <button id="button_<%= data._id %>" class="btn btn-primary mb-2" style="width: 100%;" onclick="usermange('<%= data._id %>','block')">block</button>
                                      <% } %>
                                  </td>
                                </tr>
                              <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="3" class="text-center ">
                                  <p class="mt-3">No users </p>
                                </td>
                              </tr>
                            <% } %>

