        <div class="page-wrapper bg-dark" style="min-height: 775px;">

            <div class="container mt-5">

                <div class="row">
                  <div class="col-lg-12">
                    <div class="main-box clearfix">
                      <div class="table-responsive">
                        <table class="table user-list" id="userTable">
                          <thead>
                            <tr>

                              <th><span class="ms-1">User</span></th>
                              <th><span class="ms-1">Email</span></th>
                              <th><span class="ms-1">Status</span></th>
                              <th><span class="ms-5">Edit</span></th>
                              
                            </tr>
                          </thead>
                          <tbody>
                          <tr>
                            <% if (userData.length > 0) { %>
                              <% userData.forEach(data => { %>
                                <tr>
                                  <td>
                                    <p class="user-link mt-4"><%= data.Name %></p>
                                  </td>
                                  <td>
                                    <p class="user-link mt-4"><%= data.Email %></p>
                                  </td>
                                  <td>
                                    <p class="user-link mt-4"><%= data.Status %></p>
                                  </td>
                                  <td style="width: 20%">
                                    <% if (data.Status=="blocked") { %>
                                    <a href="/admin/unblockuser/<%= data._id %>" id="button1" class="table-link btn btn-primary mb-1" style="width: 100%;">Unblock</a>
                                    <% } else { %>
                                    <a href="/admin/blockuser/<%= data._id %>" id="button2" onclick="return confirm('Are you want to block <%=data.Name%> ?')" class="table-link btn btn-danger mb-1 " style="width: 100%;" >
                                      Block
                                    </a>
                                    <% } %>
                                  </td>
                                </tr>
                              <% }) %>
                            <% } else { %>
                              <tr>
                                <td colspan="3" class="text-center ">
                                  <p class="mt-3">No users </p>
                                </td>
                              </tr>
                            <% } %>

                          </tbody>
                        </table>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
        </div>

        <script>
            // Get references to the buttons
            const button1 = document.getElementById('button1');
            const button2 = document.getElementById('button2');

            // Function to enable button 1 and disable button 2
            function enableButton1() {
              button1.removeAttribute('disabled');
              button2.setAttribute('disabled', 'true');
            }

            // Function to enable button 2 and disable button 1
            function enableButton2() {
              button2.removeAttribute('disabled');
              button1.setAttribute('disabled', 'true');
            }

            // Add click event listeners to the buttons
            button1.addEventListener('click', enableButton2);
            button2.addEventListener('click', enableButton1);
          </script>


