    <form class="forms-sample p-5" class="shadow p-4 " style="background-color: white;" method="POST" action="/admin/addOffersubmit" onsubmit="return validateForm()">

        <!-- Your existing form fields... -->

        <div class="form-group row">
            <label for="Couponname" class="col-sm-3 col-form-label"> Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="Couponname" name="name" placeholder=" Name" required>
                <small id="nameError" class="text-danger"></small>
            </div>
        </div>

        <div class="form-group row">
            <label for="Couponcode" class="col-sm-3 col-form-label"> startingDate</label>
            <div class="col-sm-9">
                <input type="date" class="form-control" id="Couponcode" name="startingDate" placeholder="startingDate" required>
                <small id="codeError" class="text-danger"></small>
            </div>
        </div>

        <div class="form-group row">
            <label for="MinAmount" class="col-sm-3 col-form-label">endDate</label>
            <div class="col-sm-9">
                <input type="date" class="form-control" id="MinAmount" name="endDate" placeholder="endDate" required>
                <small id="minError" class="text-danger"></small>
            </div>
        </div>

        <div class="form-group row">
            <label for="DiscountPercent" class="col-sm-3 col-form-label">percentage</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="DiscountPercent" name="percentage" min="1" placeholder="percentage" required>
                <small id="discountError" class="text-danger"></small>
            </div>
        </div>


        <button type="submit" class="btn btn-primary mr-2">Submit</button> 
    </form>

    <script>
        function validateForm() {
            // Reset error messages
            document.getElementById("nameError").textContent = "";
            document.getElementById("codeError").textContent = "";
            document.getElementById("minError").textContent = "";
            document.getElementById("discountError").textContent = "";
            document.getElementById("descriptionError").textContent = "";
            document.getElementById("expiryDateError").textContent = "";
            
            // Get form values
            var couponName = document.getElementById("Couponname").value;
            var couponCode = document.getElementById("Couponcode").value;
            var minAmount = document.getElementById("MinAmount").value;
            var discountAmount = document.getElementById("DiscountPercent").value;
            var couponDescription = document.getElementById("CouponDescription").value;
            var expiryDate = document.getElementById("expiryDate").value;

            // Validate Coupon Name
            if (couponName.trim() === "") {
                document.getElementById("nameError").textContent = "Coupon Name is required";
                return false; // Prevent form submission
            }

            // Validate Coupon Code
            if (couponCode.trim() === "") {
                document.getElementById("codeError").textContent = "Coupon Code is required";
                return false; // Prevent form submission
            }

            // Validate Min Amount
            if (minAmount.trim() === "") {
                document.getElementById("minError").textContent = "Min Amount is required";
                return false; // Prevent form submission
            }

            // Validate Discount Amount
            if (isNaN(discountAmount) || discountAmount < 1) {
                document.getElementById("discountError").textContent = "Enter a valid Discount Amount";
                return false; // Prevent form submission
            }

            // Validate Coupon Description
            if (couponDescription.trim() === "") {
                document.getElementById("descriptionError").textContent = "Coupon Description is required";
                return false; // Prevent form submission
            }

            // Validate Expiry Date
            if (expiryDate.trim() === "") {
                document.getElementById("expiryDateError").textContent = "Expiry Date is required";
                return false; // Prevent form submission
            }

            return true; // Allow form submission
        }
    </script>
                        
